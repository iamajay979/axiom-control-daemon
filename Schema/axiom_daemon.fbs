// TODO: Add namespace


table Header
{
	sender: string;
	module: string;
	command: string;
	parameter: string;
    timestamp: string; 
    status: string; // used for reply from Daemon: success or fail
    message: string; // Status message, to get more info when request fails
}

table BlobPacket
{
	value: [ubyte];
}

table StrParamPacket
{
	value1: string; // e.g. "4"byte
    value2: string; // e.g. "5.7"
}

table I2cPacket
{
	value1: string;
	value2: string;
	value3: string;
	value4: string;
} 

union PacketData 
{
	BlobPacket, StrParamPacket, I2cPacket
}

table DaemonRequest
{	
	header:Header; //Tells information about the packet
	data:PacketData; //Actual data
}

root_type DaemonRequest;